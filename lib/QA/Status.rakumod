use v6.d;

#-------------------------------------------------------------------------------
unit class QA::Status:auth<github:MARTIMM>:ver<0.1.0>;

#-------------------------------------------------------------------------------
my QA::Status $instance;
has Supplier $!supplier;

#-------------------------------------------------------------------------------
method new ( ) { !!! }

#-------------------------------------------------------------------------------
submethod BUILD ( ) {
  $!supplier .= new;
}

#-------------------------------------------------------------------------------
method instance ( |c --> QA::Status ) {
  $instance //= self.bless(|c);

  $instance
}

#-------------------------------------------------------------------------------
method tap ( Callable $c ) {
  my $supply = $!supplier.Supply;
  $supply.tap($c);
}

#-------------------------------------------------------------------------------
method send ( Any $v ) {
  $!supplier.emit($v);
}
